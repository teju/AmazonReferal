<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/White"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="200dp"
            android:src="@drawable/amazon_logo"
            android:scaleType="fitXY"
            android:layout_height="100dp">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:text="Referral"
            android:textSize="25dp"
            android:textColor="@color/Black"
            android:gravity="center_vertical"
            android:fontFamily="@font/opensanssemibold"
            android:layout_height="80dp">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/opensansregular"
                android:textColor="@color/Black"
                android:textSize="25dp"
                android:text="No. of Referral Added :"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/opensansregular"
                android:textColor="@color/Black"
                android:textSize="25dp"
                android:text="10"
                android:id="@+id/referral_count"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>

        <Button
            android:layout_width="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textColor="@color/White"
            android:text="Add New Referral"
            android:fontFamily="@font/opensansregular"
            android:id="@+id/btnReferral"
            android:background="@drawable/themeblack_rounded_rectangle"
            android:layout_height="wrap_content">

        </Button>

    </LinearLayout>
    <com.iapps.libs.views.LoadingCompound
        android:id="@+id/ld"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:clickable="true"
        android:visibility="gone" />

</FrameLayout>