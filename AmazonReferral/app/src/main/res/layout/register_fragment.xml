<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:background="@color/White"

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/White"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="200dp"
                android:src="@drawable/amazon_logo"
                android:scaleType="fitXY"
                android:layout_height="100dp">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:text="Referral"
                android:textSize="25dp"
                android:textColor="@color/Black"
                android:gravity="center_vertical"
                android:fontFamily="@font/opensanssemibold"
                android:layout_height="80dp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="100dp"
                android:src="@drawable/upload_pic"
                android:id="@+id/upload_pic"
                android:layout_gravity="center_horizontal"
                android:layout_height="100dp">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/opensansregular"
                android:text="Upload Photo"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/Black"
                android:layout_height="wrap_content">

            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_marginRight="30dp"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:hint="Name"
                    android:fontFamily="@font/opensansregular"
                    android:textColor="@color/Black"
                    android:paddingLeft="15dp"
                    android:inputType="text"
                    android:id="@+id/name"
                    android:textColorHint="@color/Black"
                    android:imeOptions="actionNext"
                    android:background="@drawable/themewhite_rounded_rectangle"
                    android:layout_height="50dp">
                </EditText>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/name_errror"
                    android:text="Enter Valid Name"
                    android:fontFamily="@font/opensansregular"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone"

                    android:textColor="@color/Red"
                    android:layout_height="wrap_content">
                </TextView>

                <EditText
                    android:layout_width="match_parent"
                    android:hint="Mobile No"
                    android:paddingLeft="15dp"
                    android:inputType="number"
                    android:maxLength="10"
                    android:id="@+id/mobile_no"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/opensansregular"
                    android:textColor="@color/Black"
                    android:imeOptions="actionNext"
                    android:textColorHint="@color/Black"
                    android:background="@drawable/themewhite_rounded_rectangle"
                    android:layout_height="50dp">
                </EditText>

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/mobile_errror"
                    android:text="Enter Valid Mobile Number"
                    android:fontFamily="@font/opensansregular"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone"
                    android:textColor="@color/Red"
                    android:layout_height="wrap_content">
                </TextView>

                <EditText
                    android:layout_width="match_parent"
                    android:hint="Password / Pin"
                    android:paddingLeft="15dp"
                    android:id="@+id/password"
                    android:inputType="textPassword"
                    android:imeOptions="actionNext"
                    android:textColorHint="@color/Black"
                    android:fontFamily="@font/opensansregular"
                    android:textColor="@color/Black"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/themewhite_rounded_rectangle"
                    android:layout_height="50dp">
                </EditText>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/password_errror"
                    android:text="Enter Valid Password"
                    android:visibility="gone"
                    android:fontFamily="@font/opensansregular"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/Red"
                    android:layout_height="wrap_content">
                </TextView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/themewhite_rounded_rectangle"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:id="@+id/gender_spinner"
                        android:layout_width="match_parent"
                        android:background="@color/transparent"
                        android:layout_marginLeft="10dp"
                        android:layout_height="50dp"
                        android:entries="@array/gender" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/menu_down"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">

                    </ImageView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/themewhite_rounded_rectangle"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:id="@+id/age_spinner"
                        android:layout_width="match_parent"
                        android:background="@color/transparent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:entries="@array/age" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/menu_down"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">

                    </ImageView>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:id="@+id/rlLang"
                    android:visibility="gone"
                    android:background="@drawable/themewhite_rounded_rectangle"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:id="@+id/lang_spinner"
                        android:layout_width="match_parent"
                        android:background="@color/transparent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:entries="@array/language" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/menu_down"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">

                    </ImageView>

                </RelativeLayout>

                <Button
                    android:layout_width="200dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp"
                    android:textColor="@color/White"
                    android:text="Register"
                    android:layout_marginBottom="30dp"
                    android:fontFamily="@font/opensansregular"
                    android:id="@+id/btnRegister"
                    android:background="@drawable/themeblack_rounded_rectangle"
                    android:layout_height="wrap_content">
                </Button>
            </LinearLayout>

        </LinearLayout>
        <com.iapps.libs.views.LoadingCompound
            android:id="@+id/ld"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:clickable="true"
            android:visibility="gone" />

    </FrameLayout>
</ScrollView>
